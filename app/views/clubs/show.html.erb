<h2><%= @club.name %></h2>
<%= link_to "Clubs", clubs_path %>
<%= link_to "Edit Club", edit_club_path(@club) %>
<%= link_to "Delete Club",
  club_path(@club),
  :method => :delete,
  :confirm => "Are you sure you want to delete this club?" %>
<%= link_to "Add Player", new_club_player_path(@club) %>
<br>
<ul id='players'>
  <% @club.players.each do |player| %>
    <li>
      <%= link_to player.name, [@club, player] %>
    </li>
  <% end %>
</ul>


